{% extends 'base.html.twig'%}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('css/style.css')}}">
{% endblock %}
{% block body %}
<div class="container he">
    <h2>Bienvenue au magasin !</h2>
    <a href="/panier" type="button" class="btn bg-cart"><i class="fa fa-cart-plus mr-2"></i>Panier</a>
</div>
<div class="container d-flex justify-content-center mt-50 mb-50">

    <div class="row">
  {% for produit  in produits %}

        <div class="col-md-4 mt-2">
            <div class="card">
                <div class="card-body">
                    <div class="card-img-actions"> <img src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1562074043/234.png" class="card-img img-fluid" width="96" height="350" alt=""> </div>
                </div>
                <div class="card-body bg-light text-center">
                    <div class="mb-2">
                        <h6 class="font-weight-semibold mb-2"> <a href="#" class="text-default mb-2" data-abc="true">{{ produit.titre }}</a> </h6> 
                        <a href="#" class="text-muted" data-abc="true">{{ produit.description }}</a>
                    </div>
                    <h3 class="mb-0 font-weight-semibold">&euro; {{ produit.prix }}</h3>
                    <div> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> <i class="fa fa-star star"></i> </div>
                    <a href="/panier/ajouter/{{ produit.id }}" type="button" class="btn bg-cart"><i class="fa fa-cart-plus mr-2"></i>Ajouter au panier</a>
                </div>
            </div>
        </div>
 {% endfor %}
       
    </div>
</div>
{% endblock %}